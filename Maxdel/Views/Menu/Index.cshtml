<body>
    <h1>Nuestro Menú: </h1><br />
    <form action="/Menu/Index" method="get">
        <div class="input-group">
          <input type="search" class="form-control rounded" placeholder="Buscar" name="buscar" id="buscar" aria-label="Search" aria-describedby="search-addon" value="@ViewBag.Buscar"/>
          <button type="submit" class="btn btn-outline-dark">Buscar</button>
        </div><br />
    </form>    
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach(var item in Model)
            {                
                <div class="col">
                    <div class="card h-100">
                        <img src="@item.UrlImagen" class="card-img-top" alt="Imagen Producto">
                          <div class="card-body">
                               <h5 class="card-title"><b>@item.Nombre</b></h5>
                               <p class="card-text">@item.Descripcion</p>
                               <a href="/ProcesarCompra/Detalle?IdProducto=@item.Id" class="btn btn-dark btn-primary">Ver Detalle</a>
                          </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>