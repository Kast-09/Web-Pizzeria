<section class="vh-100" style="background-color: #eed09d;">  
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://i.pinimg.com/originals/88/0a/7c/880a7cd8d7f10e8c9db331ee5076d05d.jpg"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form action="/Auth/Login" method="post">

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">Maxdel</span>
                  </div>                
                  
                  @Html.ValidationMessage("Actualizar")

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Inicia sesión en tu cuenta</h5>

                  @Html.ValidationMessage("AuthError")

                  <div class="form-outline mb-4">
                    <label class="form-label" for="correo">Correo</label>
                    <input type="email" name="correo" id="correo" class="form-control form-control-lg" />
                    @Html.ValidationMessage("Correo")
                  </div>

                  <div class="form-outline mb-4">
                    <label class="form-label" for="contraseña">Contraseña</label>
                    <input type="password" name="contraseña" id="contraseña" class="form-control form-control-lg" />
                    @Html.ValidationMessage("Contraseña")
                  </div>

                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block" type="submit">Ingresar</button>
                  </div>

                  <a class="small text-muted" href="/Auth/Correo">Olvido su Contraseña?</a>
                  <p class="mb-5 pb-lg-2" style="color: #393f81;">¿No tienes una cuenta? <a href="/Auth/Register"
                      style="color: #393f81;">Registrate aquí</a></p>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>