@{
    Layout = "_LayoutAdmin";
}
<body>
    <h1>Lista de Productos: </h1>  
    <a href="/Productos/AgregarProducto" class="btn btn-link">Agregar Producto</a><br />  
    <table class="table align-middle mb-0 bg-white">
      <thead class="bg-light">
        <tr>
          <th>Producto</th>
          <th>Tamaño</th>
          <th>Precio</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
            @foreach (var item in (List<Productos>)Model)
            {
                <tr>
                    <td WIDTH="200">
                        <div class="d-flex align-items-center">
                          <img
                              src="@item.UrlImagen"
                              alt="Imagen Producto"
                              style="width: 120px; height: 100%"
                              class="rounded"
                              />
                          <div class="ms-3">
                            <p class="fw-bold mb-1">@item.Nombre</p>                        
                            <p class="text-muted mb-0">@item.Descripcion</p>
                            <p><a href="/Productos/EditarProducto?Id=@item.Id" class="btn btn-link">Editar</a>
                                <a href="/Productos/AgregarTamañoPrecio?Id=@item.Id" class="btn btn-link">Agregar Tamaño/Precio</a></p>
                          </div>
                        </div>
                    </td>  
                    <td WIDTH="20">
                        @foreach(var item2 in item.TamañoPrecios)
                        {
                            <p>@item2.TamañoProducto</p> 
                        }
                    </td> 
                    <td WIDTH="20">
                        @foreach(var item2 in item.TamañoPrecios)
                        {
                            <p>S/. @item2.Precio</p> 
                        }
                    </td>   
                    <td WIDTH="50">
                        @foreach(var item2 in item.TamañoPrecios)
                        {
                            <span>
                                <a href="/Productos/EditarTamañoPrecio?Id=@item2.Id" class="btn btn-link">Editar</a>
                                <a href="/Productos/EliminarTamañoPrecio?Id=@item2.Id" class="btn btn-link">Eliminar</a>  
                            </span><br />   
                        }
                    </td> 
                </tr>
            }        
        
        </tbody>
    </table>
</body>
