@{
    Layout = "_LayoutAdmin";
}
<body>
    <div class="container">
        <div class="clearfix">                            
            <img src="@ViewBag.Producto.UrlImagen" class="img-thumbnailcol-md-6 float-md-end mb-3 ms-md-3" width="300px" alt="Imagen Producto">
            <h1 id="@ViewBag.Producto.Id">@ViewBag.Producto.Nombre</h1>
            <p>@ViewBag.Producto.Descripcion</p>
        </div>       
        <h1>Editar Tamaño Precio: </h1><br />
        @Html.ValidationMessage("Editar")
        <form action="/Productos/EditarTamañoPrecio?Id=@Model.Id" method="post">
            <div class="mb-3">
                <label for="TamañoProducto">Tamaño Producto: </label>
                <input type="text" class="form-control" Name="TamañoProducto" id="TamañoProducto" value="@Model.TamañoProducto">
                @Html.ValidationMessage("TamañoProducto")
            </div>
            <div class="mb-3">
                <label for="Precio">Precio: </label>
                <input type="number" class="form-control" Name="Precio" id="Precio" step="0.01" min="0" value="@Model.Precio">
                @Html.ValidationMessage("Precio")
            </div>
            <button class="btn btn-primary">Editar</button>
            <a href="/Productos/Index" class="btn btn-link">Atras</a>
        </form>
    </div>
</body>
