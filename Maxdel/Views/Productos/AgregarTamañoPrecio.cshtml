@{
    Layout = "_LayoutAdmin";
}
<body>
    <div class="container">        
        <div class="clearfix">                            
            <img src="@Model.UrlImagen" class="img-thumbnailcol-md-6 float-md-end mb-3 ms-md-3" width="300px" alt="Imagen Pizzería">
            <h1 id="@Model.Id">@Model.Nombre</h1>
            <p>@Model.Descripcion</p>
        </div>
        <h1>Agregar Tamaño Precio: </h1><br />
        @Html.ValidationMessage("Agregar")
        <form action="/Productos/AgregarTamañoPrecio?Id=@Model.Id" method="post">
            <div class="mb-3">
                <label for="TamañoProducto">Tamaño Producto: </label>
                <input type="text" class="form-control" Name="TamañoProducto" id="TamañoProducto">
                @Html.ValidationMessage("TamañoProducto")
            </div>
            <div class="mb-3">
                <label for="Precio">Precio: </label>
                <input type="number" class="form-control" Name="Precio" step="0.01" id="Precio" min="0">
                @Html.ValidationMessage("Precio")
            </div>
            <button class="btn btn-primary">Agregar Datos</button>
            <a href="/Productos/Index" class="btn btn-link">Atras</a>
        </form>
    </div>
</body>
